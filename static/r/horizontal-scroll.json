{
	"$schema": "https://shadcn-svelte.com/schema/registry-item.json",
	"name": "horizontal-scroll",
	"title": "Horizontal Scroll",
	"type": "registry:ui",
	"description": "Converts vertical mouse wheel scrolling into horizontal scrolling.",
	"registryDependencies": [
		"button",
		"button-group",
		"command",
		"popover",
		"input"
